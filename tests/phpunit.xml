<?xml version="1.0" encoding="utf-8"?>
<phpunit
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/4.1/phpunit.xsd"
    colors="true" verbose="true" stopOnFailure="false"
    bootstrap="phpunit.php">

    <!--
        Todos os endereços de arquivos e diretórios são relativos ao
        diretório no qual o PHP unit foi iniciado, ou aquele onde está
        o arquivo de configuração "phpunit.xml".
    -->

    <testsuites>
        <testsuite name="AeonDigital-PHP-EnGarde">
            <!--
                Defina aqui cada arquivo de testes que será utilizado.
            -->
            <file>src/Http/FactoryTest.php</file>


            <file>src/Config/SecurityTest.php</file>
            <file>src/Config/RouteTest.php</file>
            <file>src/Config/ApplicationTest.php</file>
            <file>src/Config/DomainTest.php</file>


            <!--file>src/Http/ResponseHandlerTest.php</file>

            <file>src/Config/HttpFactoryTest.php</file>
            <file>src/Config/ServerConfigTest.php</file>

            <file>src/Config/ApplicationRouterTest.php</file>
            <file>src/Config/ErrorListeningTest.php</file>
            <file>src/Config/SecuritySettingsTest.php</file>


            <file>src/DomainManagerTest.php</file>
            <file>src/DomainApplicationTest.php</file>
            <file>src/RequestHandlerTest.php</file>
            <file>src/ResponseHandlerTest.php</file-->
        </testsuite>
    </testsuites>
    <filter>
       <whitelist processUncoveredFilesFromWhitelist="true">
            <!--
                Defina aqui cada diretório de projeto que será
                avaliado em um teste de cobertura.
            -->
            <directory>../src</directory>
        </whitelist>
    </filter>
</phpunit>
